# InvenCare Environment Configuration Template
# Copy this file to .env and fill in your AWS values

# ===========================
# AWS Configuration
# ===========================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# ===========================
# Frontend Configuration (VITE_* variables are available in client)
# ===========================

# AWS Cognito Configuration
VITE_AWS_REGION=us-east-1
VITE_COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
VITE_COGNITO_USER_POOL_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX
VITE_COGNITO_IDENTITY_POOL_ID=us-east-1:XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX
VITE_COGNITO_DOMAIN=invencare-auth.auth.us-east-1.amazoncognito.com

# Application Configuration
VITE_APP_NAME=InvenCare
VITE_API_ENDPOINT=http://localhost:8080/api

# Lambda Function Names
VITE_LAMBDA_USER_PROFILE=invencare-auth-handler
VITE_LAMBDA_ML_PREDICT=invencare-ml-predict
VITE_LAMBDA_DATA_PROCESSOR=invencare-data-processor

# SageMaker Endpoints
VITE_SAGEMAKER_FORECAST_ENDPOINT=invencare-forecast-endpoint
VITE_SAGEMAKER_RECOMMENDATION_ENDPOINT=invencare-recommendation-endpoint

# ===========================
# Backend Configuration
# ===========================

# Cognito Configuration (for backend JWT verification)
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_USER_POOL_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX
COGNITO_REGION=us-east-1

# Database Configuration
DYNAMODB_USER_PROFILES_TABLE=InvenCare-UserProfiles
DYNAMODB_PRODUCTS_TABLE=InvenCare-Products
DYNAMODB_TRANSACTIONS_TABLE=InvenCare-Transactions

# S3 Configuration
USER_DATA_BUCKET=invencare-user-data-ACCOUNT_ID
DEPLOYMENT_BUCKET=invencare-deployment-artifacts-TIMESTAMP

# Lambda Configuration
LAMBDA_EXECUTION_ROLE_ARN=arn:aws:iam::ACCOUNT_ID:role/InvenCare-Lambda-Execution-Role

# ===========================
# Development Configuration
# ===========================
NODE_ENV=development
PORT=3000

# ===========================
# Production Configuration (uncomment for production)
# ===========================
# NODE_ENV=production
# VITE_API_ENDPOINT=https://api.invencare.yourdomain.com
# VITE_COGNITO_DOMAIN=invencare-auth.auth.us-east-1.amazoncognito.com

# ===========================
# Instructions
# ===========================
# 1. Run the AWS infrastructure setup script: ./deploy/aws-infrastructure.sh
# 2. Copy the values from deployment-config.env to replace placeholders above
# 3. Update the callback URLs in Cognito for your production domain
# 4. Deploy Lambda functions using: ./deploy/deploy-lambda.sh
# 5. Test the authentication flow
